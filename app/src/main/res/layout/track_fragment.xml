<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="album" type="com.example.frontvynils.models.Album"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        tools:context=".ui.TrackFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/album_cover"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="@{album.name}" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@{album.name}"
                android:textColor="@color/white"
                android:textSize="28sp"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@{album.genre}"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@{album.releaseDate}"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_no_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_no_tracks"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tracksRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/track_item">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</layout>
